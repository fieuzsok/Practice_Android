<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:ems="10"
 />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button0"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="calculateValue"
                android:tag="0"
                android:text="0" />

            <Button
                android:id="@+id/button1"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:onClick="calculateValue"
                android:layout_weight="1"
                android:tag="1"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:onClick="calculateValue"
                android:layout_weight="1"
                android:tag="2"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:onClick="calculateValue"
                android:layout_weight="1"
                android:tag="3"
                android:text="3" />

            <Button
                android:id="@+id/button4"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:onClick="calculateValue"
                android:layout_weight="1"
                android:tag="4"
                android:text="4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button5"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="calculateValue"
                android:tag="5"
                android:text="5" />

            <Button
                android:id="@+id/button6"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:onClick="calculateValue"
                android:layout_weight="1"
                android:tag="6"
                android:text="6" />

            <Button
                android:id="@+id/button7"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:onClick="calculateValue"
                android:layout_weight="1"
                android:tag="7"
                android:text="7" />

            <Button
                android:id="@+id/button8"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:onClick="calculateValue"
                android:layout_weight="1"
                android:tag="8"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:onClick="calculateValue"
                android:layout_weight="1"
                android:tag="9"
                android:text="9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dot"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:onClick="calculateValue"
                android:layout_weight="1"
                android:tag="."
                android:text="." />

            <Button
                android:id="@+id/add"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:onClick="calculateValue"
                android:layout_weight="1"
                android:tag="+"
                android:text="+" />

            <Button
                android:id="@+id/sub"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:onClick="calculateValue"
                android:layout_weight="1"
                android:tag="-"
                android:text="-" />

            <Button
                android:id="@+id/multi"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:onClick="calculateValue"
                android:layout_weight="1"
                android:tag="x"
                android:text="x" />

            <Button
                android:id="@+id/chia"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:onClick="calculateValue"
                android:layout_weight="1"
                android:tag="/"
                android:text="/" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sqrt"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:onClick="calculateValue"
                android:layout_weight="1"
                android:tag="SQRT"
                android:text="SQRT" />

            <Button
                android:id="@+id/can"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="calculateValue"
                android:tag="√"
                android:text="√" />

            <Button
                android:id="@+id/mod"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="MOD"
                android:onClick="calculateValue"
                android:text="MOD" />

            <Button
                android:id="@+id/div"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:onClick="calculateValue"
                android:layout_weight="1"
                android:tag="DIV"
                android:text="DIV" />

            <Button
                android:id="@+id/equal"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="calculateValue"
                android:tag="="
                android:text="=" />

        </LinearLayout>

    </LinearLayout>




</LinearLayout>